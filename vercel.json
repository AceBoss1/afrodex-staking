{
  "buildCommand": "npm ci --omit=optional && npm run build",
  "installCommand": "npm ci --omit=optional",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "build": {
    "env": {
      "NEXT_FORCE_SWCRC": "1",
      "NEXT_SKIP_SWCRC_CHECK": "1"
    }
  }
}
