# Ensure deterministic installs for all platforms
engine-strict=true

# Disable optional platform-specific dependencies (like @next/swc-win32-x64-msvc)
optional=false

# Always use the Linux-compatible binaries on remote builds (Vercel = Linux)
# This helps Next.js auto-pick the correct SWC binary
force-platform=linux
force-arch=x64

# Avoid Windows line-ending issues in lockfile
package-lock=true
save-exact=true

