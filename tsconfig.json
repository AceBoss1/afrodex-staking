{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ✅ Added baseUrl and path alias for `src`
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // ✅ Include `src` directory explicitly
  "include": ["next-env.d.ts", "src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
